{
  "manifest_version": 3,
  "name": "ArticleGPT",
  "version": "1.0",
  "description": "Generate articles using ChatGPT and OpenAI API",
  "permissions": ["storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    },
    "default_popup_width": 400,
    "default_popup_height": 600
  }
}
